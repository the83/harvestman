<header>
  <nav class="top-nav hide-on-med-and-up">
    <div class="container">
      <div class="nav-wrapper">
        {{#link-to "home"}}
          <img height="56px" src="assets/images/logo-small.png" />
        {{/link-to}}

        <ul id="nav" class="right">
          {{#link-to "product" tagName="li"}}
            {{link-to 'Products' 'product'}}
          {{/link-to}}
          {{#link-to "news" tagName="li"}}
            {{link-to 'News' 'news'}}
          {{/link-to}}
        </ul>
      </div>
    </div>
  </nav>

  <div class="container hide-on-small-and-down">
    <ul id="nav" class="side-nav fixed">
      <li class="logo">
        {{#link-to "home"}}
          <img src="assets/images/logo.png" />
        {{/link-to}}
      </li>
      {{#link-to "page.show" "about" tagName="li"}}
        {{link-to "about" 'about'}}
      {{/link-to}}
      {{#link-to "product" tagName="li"}}
        {{link-to 'Products' 'product'}}
      {{/link-to}}
      {{#link-to "systems" tagName="li"}}
        {{link-to 'Systems' 'systems'}}
      {{/link-to}}
      {{#link-to "news" tagName="li"}}
        {{link-to 'News' 'news'}}
      {{/link-to}}
      {{#link-to "media" tagName="li"}}
        {{link-to 'Media' 'media'}}
      {{/link-to}}
      {{#link-to "page.show" "firmware" tagName="li"}}
        {{link-to 'Firmware' 'firmware'}}
      {{/link-to}}
      {{#if session.isAuthenticated}}
      <li>
        <a href="#" {{action "invalidateSession"}}>
          Logout
        </a>
      </li>
      {{/if}}
    </ul>
  </div>
</header>
<main>
  <div class="section">
    {{outlet}}
  </div>
</main>
{{md-modal-container}}
