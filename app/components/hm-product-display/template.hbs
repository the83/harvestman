<div class="row">
  <div class="col s6 product-name">
    <h5>{{product.name}}</h5>
  </div>
  <div class="col s6 right model-number">
    <h5>model {{product.modelNumber}}</h5>
  </div>
</div>

{{#if isAuthenticated}}
  <div class="row">
    <div class="col s12">
      {{#link-to 'product.edit' product.id id="edit-product-btn" class="btn-flat"}}Edit{{/link-to}}
    </div>
  </div>
{{/if}}

<div class="row">
  <div class="col s12 product-image">
    <div class="center-align">
      {{hm-slideshow images=product.images}}
    </div>
  </div>
</div>

<div class="row clickable">
  {{#md-tabs
    selected=selectedTab}}
    {{md-tab value='description' title="Description"}}
    {{md-tab value='features' title="Features"}}
    {{md-tab value='manual' title="Manual"}}
    {{md-tab value='whereToBuy' title="Where to Buy"}}
  {{/md-tabs}}
</div>
<div class="row">
  {{#if showDescription}}
    <div id="description" class="col s12 show-newlines">
      <p>{{{product.description}}}</p>
    </div>
  {{/if}}
  {{#if showFeatures}}
    <div id="specs" class="col s12 show-newlines">
      <p>{{{product.features}}}</p>
    </div>
  {{/if}}
  {{#if showManual}}
    <div id="manual" class="col s12 show-newlines">
      <p>{{{product.manual}}}</p>
    </div>
  {{/if}}
  {{#if showWhereToBuy}}
    <div id="manual" class="col s12">
      <p>$$$$$</p>
    </div>
  {{/if}}
</div>
